<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/clickthrough_button_bg_selected" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/button_clickthrough_focused_background" />
    <item android:state_selected="true" android:drawable="@drawable/button_clickthrough_focused_background" />
    <item android:drawable="@drawable/button_clickthrough_focused_background" android:state_activated="true" />
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/clickthrough_button_bg" />
        </shape>
    </item>
</selector>